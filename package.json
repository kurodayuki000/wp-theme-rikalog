{
  "name": "rikalog-theme",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:js\"",
    "dev:css": "npx @tailwindcss/cli -i src/css/main.css -o dist/theme.css --watch",
    "dev:js": "npx tsx esbuild.config.ts --watch",
    "build": "npm run build:css && npm run build:js",
    "build:css": "npx @tailwindcss/cli -i src/css/main.css -o dist/theme.css --minify",
    "build:js": "npx tsx esbuild.config.ts --prod",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0",
    "concurrently": "^9.0",
    "esbuild": "^0.24",
    "tailwindcss": "^4.0",
    "tsx": "^4.0",
    "@types/node": "^22.0",
    "typescript": "^5.7"
  }
}
